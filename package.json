{
  "name": "boilerplate",
  "version": "2.8.0",
  "description": "Minimal web boilerplate",
  "keywords": [
    "webpack",
    "boilerplate"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/boilerplate.git"
  },
  "author": "sabertazimi",
  "main": "./src/index.js",
  "engines": {
    "node": ">=14"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/boilerplate/issues"
  },
  "homepage": "https://github.com/sabertazimi/boilerplate",
  "packageManager": "yarn@3.0.2",
  "scripts": {
    "badge": "ts-node scripts/badge.ts",
    "build": "cross-env NODE_ENV=production webpack",
    "dev": "cross-env NODE_ENV=development webpack serve",
    "lint": "yarn lint:style && yarn lint:type-check",
    "lint:style": "stylelint ./src/**/*.css && eslint --ext .js,.jsx,.ts,.tsx ./src",
    "lint:type-check": "tsc --noEmit",
    "prelease": "standard-version --dry-run -s",
    "release": "standard-version -s",
    "start": "yarn dev",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/preset-env": "^7.15.8",
    "@dg-scripts/eslint-config": "^5.5.4",
    "@dg-scripts/stylelint-config": "^5.5.4",
    "@svgr/webpack": "^5.5.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.1",
    "@types/node-fetch": "^2.5.12",
    "@types/webpack-dev-server": "^4.3.1",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.4.0",
    "css-minimizer-webpack-plugin": "^3.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.0.1",
    "eslint-webpack-plugin": "^3.0.1",
    "file-loader": "^6.2.0",
    "html-loader": "^3.0.0",
    "html-webpack-plugin": "^5.4.0",
    "jest": "^27.3.1",
    "mini-css-extract-plugin": "^2.4.3",
    "node-fetch": "^2.6.5",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "prettier": "^2.4.1",
    "sass-loader": "^12.2.0",
    "standard-version": "^9.3.2",
    "style-loader": "^3.3.1",
    "stylelint": "^13.13.1",
    "stylelint-webpack-plugin": "^3.0.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths-webpack-plugin": "^3.5.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.58.2",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1",
    "webpackbar": "^5.0.0-3"
  }
}
